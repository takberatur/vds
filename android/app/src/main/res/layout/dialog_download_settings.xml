<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- URL Display -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/background"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:ellipsize="middle"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            tools:text="https://youtube.com/watch?v=..." />

    </com.google.android.material.card.MaterialCardView>

    <!-- Download Type Selection -->
    <TextView
        android:id="@+id/tvTypeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/select_download_type"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/cvUrl" />

    <RadioGroup
        android:id="@+id/rgType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTypeLabel">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/video"
            android:drawableTop="@drawable/ic_video"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/selector_radio_background"
            android:button="@null"
            android:textColor="@drawable/selector_radio_text" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbAudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/audio_mp3"
            android:drawableTop="@drawable/ic_music_note"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/selector_radio_background"
            android:button="@null"
            android:textColor="@drawable/selector_radio_text" />

    </RadioGroup>

    <!-- Platform Selection -->
    <TextView
        android:id="@+id/tvPlatformLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/please_select_a_platform"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/rgType" />

    <!-- Platform List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlatforms"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tvPlatformLabel"
        tools:listitem="@layout/item_platform_selection" />

    <!-- No Platforms Message -->
    <TextView
        android:id="@+id/tvNoPlatforms"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="@string/no_platforms_available"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvPlatformLabel" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/rvPlatforms">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/cancel"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/download"
            android:enabled="false"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>