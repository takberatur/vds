<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_player_controls_gradient">

    <!-- Bottom Controls Container -->
    <LinearLayout
        android:id="@+id/llBottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="00:00" />

            <androidx.media3.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                app:played_color="@color/primary"
                app:scrubber_color="@color/primary"
                app:unplayed_color="@android:color/darker_gray" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="00:00" />

        </LinearLayout>

        <!-- Player Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Previous -->
            <ImageButton
                android:id="@+id/exo_prev"
                style="@style/ExoMediaButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/previous"
                android:src="@drawable/ic_skip_previous"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

            <!-- Rewind 10s -->
            <ImageButton
                android:id="@+id/exo_rew"
                style="@style/ExoMediaButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/rewind_10s"
                android:src="@drawable/ic_replay_10"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

            <!-- Play/Pause -->
            <ImageButton
                android:id="@+id/exo_play_pause"
                style="@style/ExoMediaButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="24dp"
                android:contentDescription="@string/play_pause"
                android:src="@drawable/ic_play_circle"
                android:background="@drawable/bg_play_button"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

            <!-- Forward 10s -->
            <ImageButton
                android:id="@+id/exo_ffwd"
                style="@style/ExoMediaButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/forward_10s"
                android:src="@drawable/ic_forward_10"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

            <!-- Next -->
            <ImageButton
                android:id="@+id/exo_next"
                style="@style/ExoMediaButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/next"
                android:src="@drawable/ic_skip_next"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

        </LinearLayout>

        <!-- Additional Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Quality Settings -->
            <ImageButton
                android:id="@+id/btnQuality"
                style="@style/ExoMediaButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/quality"
                android:src="@drawable/ic_settings"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

            <!-- Playback Speed -->
            <TextView
                android:id="@+id/btnSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="1.0x"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Subtitle -->
            <ImageButton
                android:id="@+id/btnSubtitle"
                style="@style/ExoMediaButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/subtitle"
                android:src="@drawable/ic_subtitles"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

            <!-- Fullscreen -->
            <ImageButton
                android:id="@+id/btnFullscreen"
                style="@style/ExoMediaButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/fullscreen"
                android:src="@drawable/ic_fullscreen"
                app:tint="@android:color/white"
                tools:ignore="PrivateResource" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>